}
.fixed-right{
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  right: 22.5rpx;
  bottom: 0;
}
.fixed-item{
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
