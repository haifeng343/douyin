.list {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.list .item {
  width: 97.5%;
  margin: 18rpx auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.list .item .item1 {
  width: 100%;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
}
.list .item .item2 {
  width: 100%;
  display: flex;
  -webkit-box-pack: end;
    -webkit-justify-content: flex-end;
    justify-content: flex-end;
}
.item1 .chatImg{
  margin-right: 18rpx;
}
.item2 .chatImg{
  margin-left: 18rpx;
}
.chatImg {
  width: 66rpx;
  height: 66rpx;
  border-radius: 6rpx;
}
.list .item .item1 .chatTxt {
  background: #fff;
}
.list .item .item2 .chatTxt {
  background: #4CD000;
}
.chatTxt {
  font-size: 13px;
  padding: 4px 9px;
  max-width: 75%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-radius: 3px;
}












